<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tb="clr-namespace:H.NotifyIcon;assembly=H.NotifyIcon.Wpf"
    xmlns:local="clr-namespace:ShadowKVM"
    >

    <ContextMenu
        x:Key="TrayMenu"
        x:Shared="false"
        >
        <!-- <MenuItem
            Header="Configure"
            Command="{Binding ConfigureCommand}"
            /> -->
        <MenuItem
            Header="Exit"
            Command="{Binding ExitCommand}"
            />
    </ContextMenu>

    <!-- TODO apply some of these properties
        ToolTipText="ToolTip"
        ContextMenu="{StaticResource TrayMenu}"
        TrayPopup="{StaticResource TrayStatusPopup}"
        PopupActivation="DoubleClick"
        TrayToolTip="{StaticResource TrayToolTip}"
    -->

    <tb:TaskbarIcon
        x:Key="NotifyIcon"
        ContextMenu="{StaticResource TrayMenu}"
        IconSource="pack://application:,,,/IconAttached.ico"
        LeftClickCommand="{Binding ConfigureCommand}"
        MenuActivation="LeftOrRightClick"
        NoLeftClickDelay="True"
        ToolTipText="ToolTip TODO"
        >
        <tb:TaskbarIcon.DataContext>
            <local:NotifyIconViewModel />
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>

</ResourceDictionary>
